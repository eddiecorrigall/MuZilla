{
	// Required
	"manifest_version": 2,
	"name": "MuZilla",
	"version": "1",

	// Other
	
	"description": "Some kind of music thing",
	
	"icons": {
		"128": "icon_128.png"
	},

	"background": {
		"persistent": false,
		"scripts": [ "src/background.chrome.js" ]
	},

	"content_scripts": [{
		"matches": [ "<all_urls>" ],
		"js": [ "src/content.chrome.js" ],
		"run_at": "document_idle",
		"all_frames": false
	}],

	"page_action": {
		"default_title": "MuZilla",
		"default_popup": "src/popup.html",
		"default_icon": {
			"128": "icon_128.png"
		}
	},

	"permissions": [
		"tabs",
		"activeTab"
	]
}